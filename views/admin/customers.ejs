<%- include('../partials/admin/header', { title: 'Admin Panel - Customers' }) %>

<style>
  .swal2-popup {
    border-radius: .7rem !important; /* 16px */
  }
  .swal2-title {
    font-size: 20px !important;
  }
</style>

<div class="flex flex-1 min-h-screen bg-gray-50">
  <!-- Main content -->
  <main class="flex-1 flex flex-col p-8">
    <!-- Page title -->
    <h1 class="text-3xl font-bold text-gray-800 mb-8">Customers</h1>

    <!-- Search bar -->
    <div class="mb-6">
      <form method="GET" action="/admin/users" class="flex gap-2">
        <input type="text" name="search" placeholder="Search categories..."
          value="<%= searchQuery %>"
          class="w-full md:w-1/3 px-4 py-2 rounded-md border border-slate-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 text-gray-800" />
        <button type="submit"
          class="bg-gray-500 text-white px-4 py-2 rounded-md hover:bg-gray-700 transition font-medium">
          Search
        </button>
        <% if (searchQuery) { %>
          <a href="/admin/users" class="bg-gray-300 text-gray-800 px-4 py-2 rounded-md hover:bg-gray-400 transition">
            Clear
          </a>
        <% } %>
      </form>
    </div>

    <!-- User table -->
    <div class="overflow-x-auto bg-white shadow-md rounded-xl">
      <table class="min-w-full divide-y divide-gray-200 text-sm">
        <thead class="bg-gray-100 text-gray-700">
          <tr>
            <th class="px-6 py-3 text-left font-semibold">Name</th>
            <th class="px-6 py-3 text-left font-semibold">Email</th>
            <th class="px-6 py-3 text-left font-semibold">Phone No</th>
            <th class="px-6 py-3 text-center font-semibold">Action</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% if (users.length === 0) { %>
            <tr>
              <td colspan="4" class="text-center py-6 text-gray-500">No users found.</td>
            </tr>
          <% } else { %>
            <% users.forEach(user => { %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4"><%= user.name %></td>
                <td class="px-6 py-4"><%= user.email %></td>
                <td class="px-6 py-4"><%= user.phone || 'N/A' %></td>
                <td class="px-6 py-4 text-center">
                  <% if (!user.isBlocked) { %>
                   <button onclick="toggleUserBlock('<%= user._id %>', true, this)" class="inline-block px-4 py-2 text-sm font-semibold rounded-md bg-red-500 hover:bg-red-600 text-white">Block</button>
                  <% } else { %>
                    <button onclick="toggleUserBlock('<%= user._id %>', false, this)" class="inline-block px-4 py-2 text-sm font-semibold rounded-md bg-green-500 hover:bg-green-600 text-white">Unblock</button>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>

 <!-- Pagination Section -->
 <% if (totalPages > 1) { %>
  <div class="flex justify-center mt-8">
    <ul class="flex gap-2">
      <% for (let i = 1; i <= totalPages; i++) { %>
        <li>
          <a href="?page=<%= i %>&search=<%= searchQuery %>"
            class="px-4 py-2 rounded-md text-sm font-semibold border transition
            <%= i === currentPage 
              ? 'bg-gray-600 text-white border-gray-600' 
              : 'bg-white text-gray-700 border-gray-300 hover:bg-gray-50' %>">
            <%= i %>
          </a>
        </li>
      <% } %>
    </ul>
  </div>
<% } %>
  </main>
</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>

  function toggleUserBlock(userId,block,button){
    const action = block ? "block" : "unblock";

    Swal.fire({
      title:`Are you sure you want to ${action} this user?`,
      showCancelButton:true,
      confirmButtonColor: '#1f2937', 
      cancelButtonColor: '#d1d5db',
      confirmButtonText: `Yes, ${action}`,
      customClass: {
        popup: 'text-center',
      }
    }).then((result)=>{
      if(result.isConfirmed){
        fetch('/admin/users-block',{
          method:'POST',
          headers:{
            "Content-Type":"application/json"
          },
          body:JSON.stringify({userId,block})
        })
        .then(res=> res.json())
        .then(data=>{
          if(data.success){
            Swal.fire({
              title: `User ${block ? 'blocked' : 'unblocked'} successfully`,
              text: '',
              confirmButtonColor: '#1f2937' 
            }).then(()=>{
              button.textContent = block ? 'Unblock' : 'Block';
              button.className = block
              ? 'inline-block px-4 py-2 text-sm font-semibold rounded-md bg-green-500 hover:bg-green-600 text-white'
              : 'inline-block px-4 py-2 text-sm font-semibold rounded-md bg-red-500 hover:bg-red-600 text-white';
            button.setAttribute("onclick", `toggleUserBlock('${userId}', ${!block}, this)`);
            })
          }else{
            Swal.fire("Error", "Failed to update user status", "error");
          }
        })
      }
    })
    .catch(err => {
      console.error(err);
      Swal.fire("Error", "Something went wrong", "error");
    });
  }

</script>

<%- include('../partials/admin/footer') %>
