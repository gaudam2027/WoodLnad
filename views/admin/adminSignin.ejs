<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= typeof title !== 'undefined' ? title : 'Admin Panel' %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/css/signUp.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex flex-col min-h-screen">

  <!-- Admin Navigation -->
  <nav class="absolute top-0 left-0 w-full bg-white shadow-md flex justify-center items-center py-3 z-20">
    <div class="text-2xl font-bold text-gray-800 flex items-center" style="font-family: 'Raleway', sans-serif;">
      <img src="/images/logo.png" class="h-10 w-auto object-contain" alt="logo">
      <div class="pl-2">WOODLAND <span class="text-gray-500 text-base ml-1">Admin</span></div>
    </div>
  </nav>

  <!-- Spacer to push content below the fixed nav -->
  <div class="h-20"></div>

<!-- Background Image Layer -->
<div class="fixed inset-0 bg-cover bg-center -z-30" style="background-image: url('/images/adbg.jpg');"></div>

<!-- Optional Dark Overlay -->
<div class="fixed inset-0 bg-black bg-opacity-60 -z-20"></div>

<!-- Centered Page Wrapper -->
<div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 px-4 w-full">
  <!-- Login Box -->
<div class="mx-auto bg-white p-6 rounded-xl shadow-xl w-full max-w-sm backdrop-blur-sm bg-opacity-85">
  <div class="text-center mb-6">
    <h2 class="text-2xl font-bold text-gray-800">Admin Login</h2>
    <p class="text-sm text-gray-500">Welcome back! Please log in to your account.</p>
    <p id="message" class="text-red-500 mt-2 transition-opacity duration-300 opacity-0"></p>
  </div>

  <!-- Login Form -->
  <form id="signinForm" class="space-y-4">
    <div>
      <label class="block text-sm font-medium text-gray-700">Email</label>
      <input type="email" id="email" name="email" required
        class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-gray-400 focus:outline-none transition" />
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700">Password</label>
      <input type="password" id="password" name="password" required
        class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-gray-400 focus:outline-none transition" />
      <div class="text-right mt-1">
        <button type="button" id="forgotPasswordBtn"
          class="text-sm text-gray-600 hover:text-gray-800 transition duration-200">
          Forgot Password?
        </button>
      </div>
    </div>
    <div class="flex justify-center">
      <button type="submit"
        class="bg-gray-800 text-white px-6 py-2 rounded-md hover:bg-gray-700 transition-all">
        Sign In
      </button>
    </div>
  </form>

  <!-- OTP Form (hidden by default) -->
  <form id="otpForm" class="space-y-4 hidden">
    <div>
      <label class="block text-sm font-medium text-gray-700">Enter OTP</label>
      <input type="text" id="otp" name="otp" maxlength="6" required
        class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-1 focus:ring-gray-400 focus:outline-none transition" />
    </div>
    <div class="flex justify-center">
      <button type="submit"
        class="bg-gray-800 text-white px-6 py-2 rounded-md hover:bg-gray-700 transition-all">
        Verify OTP
      </button>
    </div>
  </form>
</div>
</div>


<!-- socket -->
<script src="/socket.io/socket.io.js"></script>

<script>
  const form = document.getElementById('signinForm');
  const message = document.getElementById('message');
  const forgetPasswordBtn = document.getElementById('forgotPasswordBtn')
  const otpForm = document.getElementById('otpForm')

  function isValidPassword(password) {
    const regex = /^[A-Za-z0-9]{8,}$/;
    return regex.test(password);
  }

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const email = form.email.value.trim();
    const password = form.password.value.trim();

    // Password validation
    if (!isValidPassword(password)) {
      message.textContent = 'Password must be at least 8 characters and only contain letters and digits.';
      message.classList.remove('opacity-0');
      return;
    }

    try {
      const res = await fetch('/admin/signin', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ email, password })
      });

      const data = await res.json();

      if (data.success) {
        const socket = io();
        // Emit register-admin
        socket.emit('register-admin');
        
        window.location.href = '/admin';
      } else {
        message.textContent = data.message;
        message.classList.remove('opacity-0');
      }

    } catch (err) {
      console.error('Error:', err);
      message.textContent = 'Something went wrong.';
      message.classList.remove('opacity-0');
    }
  });

  //Forgot Password
  forgetPasswordBtn.addEventListener('click',async () => {
    const email = form.email.value.trim();

    if(!email){
      message.textContent = 'Please enter your email to reset password.';
      message.classList.remove('opacity-0');
      return;
    }

    try{
      const res = await fetch('/admin/forgot-password',{
        method:'POST',
        headers:{'Content-Type': 'application/json'},
        body: JSON.stringify({email})
      });

      const data = await res.json();

      if(data.success){
        message.textContent = 'OTP sent to your email.'
        message.classList.remove('opacity-0');

        form.classList.add('hidden');
        otpForm.classList.remove('hidden');
      }else{
  
        message.textContent = data.message || 'Failed to send OTP.';
        message.classList.remove('opacity-0');
      
      }
    }catch(err){
      console.error(err);
      message.textContent = 'Something went wrong.';
      message.classList.remove('opacity-0');
    }

  })
</script>


<%- include('../partials/admin/footer') %>
</body>
</html>
