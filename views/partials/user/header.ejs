<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'Furniture Store' %></title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/home.css">
  <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>
<body>
  


<nav class="bg-white shadow-md py-4 px-6">
  <div class="flex justify-between items-center">
    
    <!-- Left: Hamburger + Logo -->
    <div class="flex items-center space-x-4">
      <!-- Hamburger Button -->
      <button id="menuBtn" class="lg:hidden text-gray-600 focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <!-- Logo -->
      <div class="text-2xl font-bold text-gray-800 flex items-center" style="font-family: 'Raleway', sans-serif;">
        <img src="/images/logo.png" class="h-8 w-auto" alt="logo" />
        <div class="pl-2">WOODLAND</div>
      </div>
    </div>

    <!-- Middle: Desktop Nav -->
    <div class="hidden lg:flex space-x-6">
      <a href="/" class="text-gray-600 hover:text-gray-900">Home</a>
      <a href="/shop" class="text-gray-600 hover:text-gray-900">Shop</a>
      <a href="#" class="text-gray-600 hover:text-gray-900">About</a>
      <a href="#" class="text-gray-600 hover:text-gray-900">Contact</a>
    </div>

    <!-- Right: Icons -->
    <div class="flex space-x-4 items-center">
      <% if (!user) { %>
        <!-- Sign In visible on screens smaller than xl -->
        <a href="/signIn" class="text-gray-600 hover:text-gray-900">
          Sign In
        </a>
      <% } %>
      <!-- Search -->
      <a href="#" class="text-gray-600 hover:text-gray-900">
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </a>

      <!-- Cart -->
      <a href="/cart" class="text-gray-600 hover:text-gray-900">
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
        </svg>
      </a>

      <%if(user){%><p><%=user.name%></p><%}%>
      <!-- Profile Icon -->
      <div class="relative" id="profileDropdown">
        <button id="profileBtn" class="text-gray-600 hover:text-gray-900 focus:outline-none">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </button>

        <% if(user){ %>
        <div id="dropdownMenu"
          class="hidden transition-all duration-200 ease-in-out transform scale-95 opacity-0 absolute right-0 mt-2 w-40 bg-white rounded-md shadow-lg z-10">
          <a href="/profile" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">My Profile</a>
          <a href="/logout" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Logout</a>
        </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Mobile Menu (only nav links) -->
  <div id="mobileMenu" class="lg:hidden hidden mt-4 space-y-2">
    <a href="/" class="block text-gray-600 hover:text-gray-900">Home</a>
    <a href="/shop" class="block text-gray-600 hover:text-gray-900">Shop</a>
    <a href="#" class="block text-gray-600 hover:text-gray-900">About</a>
    <a href="#" class="block text-gray-600 hover:text-gray-900">Contact</a>
  </div>
</nav>

<!-- Script -->
<script>
  const menuBtn = document.getElementById("menuBtn");
  const mobileMenu = document.getElementById("mobileMenu");
  const profileBtn = document.getElementById("profileBtn");
  const dropdownMenu = document.getElementById("dropdownMenu");

  menuBtn?.addEventListener("click", () => {
    mobileMenu.classList.toggle("hidden");
  });

  profileBtn?.addEventListener("click", (e) => {
    e.stopPropagation();
    dropdownMenu?.classList.toggle("hidden");
    dropdownMenu?.classList.toggle("opacity-0");
    dropdownMenu?.classList.toggle("scale-95");
  });

  document.addEventListener("click", (e) => {
    if (!document.getElementById("profileDropdown")?.contains(e.target)) {
      dropdownMenu?.classList.add("hidden", "opacity-0", "scale-95");
    }
  });
</script>


  

  