    /* 18:9 Aspect Ratio Optimization (2160Ã—1080) - Same as signup */
    @media (min-aspect-ratio: 18/9) {
      .wide-screen-container {
        max-width: 500px !important;
        margin-left: auto !important;
        margin-right: auto !important;
        padding-left: 20px !important;
        padding-right: 20px !important;
      }
      .wide-screen-container h2 {
        font-size: 2rem !important;
        margin-bottom: 8px !important;
      }
      .wide-screen-container p {
        font-size: 1rem !important;
        margin-bottom: 24px !important;
      }
      .otp-input {
        width: 3.5rem !important;
        height: 4rem !important;
        font-size: 1.875rem !important;
      }
      .mobile-btn {
        padding: 14px 20px !important;
        font-size: 0.95rem !important;
      }
      .timer-display {
        font-size: 0.875rem !important;
        padding: 8px 12px !important;
      }
    }

    /* Ultra-wide screens */
    @media (min-aspect-ratio: 21/9) {
      .wide-screen-container {
        max-width: 550px !important;
        padding-left: 32px !important;
        padding-right: 32px !important;
      }
    }

    /* OTP Input Specific Styles */
    .otp-input::-webkit-inner-spin-button,
    .otp-input::-webkit-outer-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }
    .otp-input {
      font-variant-numeric: tabular-nums;
    }
    .otp-input:focus {
      transform: scale(1.05);
    }
  </style>
</head>
<body class="min-h-screen bg-gray-900 flex flex-col overflow-hidden">

    <!-- Navigation - Keep Original -->
    <nav class="absolute top-0 left-0 w-full bg-white shadow-md flex justify-center items-center z-20">
        <a href="/">
            <div class="text-2xl font-bold text-gray-800 flex items-center" style="font-family: 'Raleway', sans-serif;">
                <img src="./images/logo.png" class="logo bgImg" alt="logo">
                <div class="pl-2">WOODLAND</div>
            </div>
        </a>
    </nav>

    <!-- Main Content -->
    <div class="flex-1 relative flex items-center justify-center px-2 sm:px-4 pt-16">

        <!-- Background Image with Overlay -->
        <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('/images/signUpBg.jpg');">
            <div class="absolute inset-0 bg-black bg-opacity-50"></div>
        </div>

        <!-- OTP Verification Form Container -->
        <div class="wide-screen-container mobile-compact relative z-10 bg-white bg-opacity-20 backdrop-blur-md p-6 sm:p-8 rounded-2xl shadow-2xl w-full max-w-md mx-auto border border-white border-opacity-30">
            
            <!-- Header -->
            <div class="text-center mb-6">
                <h2 class="text-xl sm:text-2xl md:text-3xl font-bold text-white mb-2" style="font-family: 'Raleway', sans-serif;">
                    <i class="fas fa-shield-alt mr-2 text-blue-300"></i>
                    Verify OTP
                </h2>
                <p class="text-xs sm:text-sm text-gray-200 leading-relaxed">
                    Enter the 6-digit code sent to your registered email or phone
                </p>
            </div>

            <!-- Success/Error Messages -->
            <div id="error-message" class="hidden text-xs sm:text-sm px-3 sm:px-4 py-2 sm:py-3 rounded-lg text-center font-medium mb-4">
            </div>

            <!-- OTP Form -->
            <form id="otp-form" onsubmit="return validateOTPForm()" class="space-y-6">
                
                <!-- OTP Input Fields -->
                <div class="flex justify-center items-center gap-2 sm:gap-3 mb-6">
                    <input type="text" maxlength="1" 
                        class="otp-input w-12 h-14 sm:w-14 sm:h-16 text-center text-xl sm:text-2xl font-bold bg-white bg-opacity-90 border-2 border-gray-300 rounded-xl focus:border-gray-500 focus:ring-2 focus:ring-gray-400 focus:outline-none focus:bg-opacity-100 transition-all duration-200 shadow-lg" 
                        required />
                    <input type="text" maxlength="1" 
                        class="otp-input w-12 h-14 sm:w-14 sm:h-16 text-center text-xl sm:text-2xl font-bold bg-white bg-opacity-90 border-2 border-gray-300 rounded-xl focus:border-gray-500 focus:ring-2 focus:ring-gray-400 focus:outline-none focus:bg-opacity-100 transition-all duration-200 shadow-lg" 
                        required />
                    <input type="text" maxlength="1" 
                        class="otp-input w-12 h-14 sm:w-14 sm:h-16 text-center text-xl sm:text-2xl font-bold bg-white bg-opacity-90 border-2 border-gray-300 rounded-xl focus:border-gray-500 focus:ring-2 focus:ring-gray-400 focus:outline-none focus:bg-opacity-100 transition-all duration-200 shadow-lg" 
                        required />
                    <input type="text" maxlength="1" 
                        class="otp-input w-12 h-14 sm:w-14 sm:h-16 text-center text-xl sm:text-2xl font-bold bg-white bg-opacity-90 border-2 border-gray-300 rounded-xl focus:border-gray-500 focus:ring-2 focus:ring-gray-400 focus:outline-none focus:bg-opacity-100 transition-all duration-200 shadow-lg" 
                        required />
                    <input type="text" maxlength="1" 
                        class="otp-input w-12 h-14 sm:w-14 sm:h-16 text-center text-xl sm:text-2xl font-bold bg-white bg-opacity-90 border-2 border-gray-300 rounded-xl focus:border-gray-500 focus:ring-2 focus:ring-gray-400 focus:outline-none focus:bg-opacity-100 transition-all duration-200 shadow-lg" 
                        required />
                    <input type="text" maxlength="1" 
                        class="otp-input w-12 h-14 sm:w-14 sm:h-16 text-center text-xl sm:text-2xl font-bold bg-white bg-opacity-90 border-2 border-gray-300 rounded-xl focus:border-gray-500 focus:ring-2 focus:ring-gray-400 focus:outline-none focus:bg-opacity-100 transition-all duration-200 shadow-lg" 
                        required />
                </div>

                <!-- Timer Display -->
                <div class="text-center mb-6">
                    <div class="inline-flex items-center gap-2 bg-white bg-opacity-20 backdrop-blur-sm rounded-full px-4 py-2 border border-white border-opacity-30">
                        <i class="fas fa-clock text-blue-300 text-sm"></i>
                        <span class="text-white text-sm font-medium">Time left:</span>
                        <span id="countdown" class="timer-display bg-gray-500 bg-opacity-90 text-white px-2 py-1 rounded-full text-xs font-bold shadow-sm">01:00</span>
                    </div>
                </div>

                <!-- Verify Button -->
                <button type="submit" 
                    class="mobile-btn w-full bg-gray-800 bg-opacity-90 text-white py-3 sm:py-3.5 px-6 rounded-lg hover:bg-opacity-100 font-semibold transition-all duration-200 transform hover:scale-[1.02] disabled:opacity-50 disabled:cursor-not-allowed backdrop-blur-sm text-base shadow-lg">
                    <i class="fas fa-check-circle mr-2 text-sm"></i>Verify OTP
                </button>

                <!-- Resend Section -->
                <div class="text-center pt-4 border-t border-white border-opacity-30">
                    <p class="text-xs sm:text-sm text-gray-200 mb-2">Didn't receive the code?</p>
                    <button type="button" onclick="resendOTP()" id="resendBtn" 
                        class="text-blue-300 hover:text-blue-200 underline font-medium text-sm transition-all duration-200 disabled:text-gray-400 disabled:no-underline disabled:cursor-not-allowed">
                        <i class="fas fa-redo-alt mr-1 text-xs"></i>Resend OTP
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Loading Overlay -->
    <div id="loading-overlay" class="fixed inset-0 bg-black bg-opacity-70 z-50 flex justify-center items-center hidden">
        <div class="bg-white rounded-xl p-4 sm:p-6 text-center shadow-2xl max-w-xs sm:max-w-sm mx-4">
            <div class="animate-spin rounded-full h-8 w-8 sm:h-12 sm:w-12 border-b-2 border-gray-800 mx-auto mb-3 sm:mb-4"></div>
            <p class="text-gray-800 font-semibold text-sm sm:text-lg" id="loading-title">Verifying OTP...</p>
            <p class="text-gray-600 text-xs sm:text-sm mt-1" id="loading-message">Please wait</p>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        const inputs = document.querySelectorAll('.otp-input');

        // OTP Input Navigation Logic
        inputs.forEach((input, i) => {
            input.addEventListener('input', (e) => {
                // Allow only numbers
                e.target.value = e.target.value.replace(/[^0-9]/g, '');
                
                if (e.target.value.length === 1 && i < inputs.length - 1) {
                    inputs[i + 1].focus();
                }
            });

            input.addEventListener('keydown', (e) => {
                if (e.key === "Backspace" && input.value === '' && i > 0) {
                    inputs[i - 1].focus();
                } else if (e.key === "ArrowLeft" && i > 0) {
                    inputs[i - 1].focus();
                } else if (e.key === "ArrowRight" && i < inputs.length - 1) {
                    inputs[i + 1].focus();
                }
            });

            input.addEventListener('paste', (e) => {
                e.preventDefault();
                const paste = (e.clipboardData || window.clipboardData).getData('text');
                const digits = paste.replace(/\D/g, '').slice(0, 6);

                digits.split('').forEach((digit, index) => {
                    if (inputs[i + index]) {
                        inputs[i + index].value = digit;
                    }
                });

                // Focus on next empty field or last field
                const nextEmptyIndex = Math.min(i + digits.length, inputs.length - 1);
                inputs[nextEmptyIndex].focus();
            });

            // Focus border color change
            input.addEventListener('focus', () => {
                input.classList.add('border-blue-500', 'ring-2', 'ring-blue-400');
            });

            input.addEventListener('blur', () => {
                input.classList.remove('ring-2', 'ring-blue-400');
                if (!input.value) {
                    input.classList.remove('border-blue-500');
                    input.classList.add('border-gray-300');
                }
            });
        });

        // Timer Logic
        let seconds = 60;
        let isOTPExpired = false;
        const countdown = document.getElementById('countdown');
        const resendBtn = document.getElementById('resendBtn');

        function updateTimer() {
            if (seconds > 0) {
                resendBtn.disabled = true;
                resendBtn.classList.add('text-gray-400', 'cursor-not-allowed');
                resendBtn.classList.remove('text-blue-300', 'hover:text-blue-200');
                
                const min = String(Math.floor(seconds / 60)).padStart(2, '0');
                const sec = String(seconds % 60).padStart(2, '0');
                countdown.textContent = `${min}:${sec}`;
                seconds--;
            } else {
                clearInterval(timerInterval);
                isOTPExpired = true;
                countdown.textContent = 'Expired';
                countdown.classList.add('bg-red-500');
                countdown.classList.remove('bg-blue-500');
                
                resendBtn.disabled = false;
                resendBtn.classList.remove('text-gray-400', 'cursor-not-allowed');
                resendBtn.classList.add('text-blue-300', 'hover:text-blue-200');
            }
        }

        let timerInterval = setInterval(updateTimer, 1000);
        updateTimer();

        // Form Validation
        function validateOTPForm() {
            if (isOTPExpired) {
                Swal.fire({
                    icon: "error",
                    title: "OTP Expired",
                    text: "Your OTP has expired. Please resend the OTP.",
                    confirmButtonColor: '#3b82f6'
                });
                return false;
            }

            let otp = '';
            let allFilled = true;

            inputs.forEach(input => {
                if (input.value === '') allFilled = false;
                otp += input.value;
            });

            if (!allFilled || otp.length !== 6) {
                Swal.fire({
                    icon: "warning",
                    title: "Incomplete OTP",
                    text: "Please enter all 6 digits.",
                    confirmButtonColor: '#3b82f6'
                });
                return false;
            }

            // Show loading
            document.getElementById('loading-overlay').classList.remove('hidden');

            $.ajax({
                type: "POST",
                url: "signupOtp",
                data: { otp: otp },
                success: function (response) {
                    document.getElementById('loading-overlay').classList.add('hidden');
                    if (response.success) {
                        Swal.fire({
                            icon: "success",
                            title: "OTP Verified Successfully",
                            text: "Welcome to Woodland!",
                            showConfirmButton: false,
                            timer: 2000,
                        }).then(() => {
                            window.location.href = response.redirectUrl;
                        });
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Invalid OTP",
                            text: response.message,
                            confirmButtonColor: '#3b82f6'
                        });
                    }
                },
                error: function () {
                    document.getElementById('loading-overlay').classList.add('hidden');
                    Swal.fire({
                        icon: "error",
                        title: "Verification Failed",
                        text: "Please try again",
                        confirmButtonColor: '#3b82f6'
                    });
                }
            });

            return false;
        }

        // Resend OTP Function
        function resendOTP() {
            document.getElementById('loading-overlay').classList.remove('hidden');
            
            fetch('/resendOtp', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                credentials: 'include'
            })
            .then(res => res.json())
            .then(data => {
                document.getElementById('loading-overlay').classList.add('hidden');
                if (data.success) {
                    Swal.fire({
                        icon: "success",
                        title: "OTP Resent",
                        text: data.message,
                        showConfirmButton: false,
                        timer: 2000,
                    });

                    // Reset timer
                    clearInterval(timerInterval);
                    seconds = 60;
                    isOTPExpired = false;
                    countdown.classList.remove('bg-red-500');
                    countdown.classList.add('bg-blue-500');
                    updateTimer();
                    timerInterval = setInterval(updateTimer, 1000);

                    // Clear input fields
                    inputs.forEach(input => {
                        input.value = '';
                        input.classList.remove('border-blue-500');
                        input.classList.add('border-gray-300');
                    });
                    inputs[0].focus();
                } else {
                    Swal.fire({
                        icon: "error",
                        title: "Resend Failed",
                        text: data.message,
                        confirmButtonColor: '#3b82f6'
                    });
                }
            })
            .catch(error => {
                document.getElementById('loading-overlay').classList.add('hidden');
                console.error("Error:", error);
                Swal.fire({
                    icon: "error",
                    title: "Network Error",
                    text: "Something went wrong while resending the OTP.",
                    confirmButtonColor: '#3b82f6'
                });
            });
        }

        // Auto-focus first input on page load
        document.addEventListener('DOMContentLoaded', () => {
            inputs[0].focus();
        });
    </script>
</body>
</html>
