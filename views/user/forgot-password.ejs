<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Forgot Password - Woodland</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="./css/signUp.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  
  <style>
    /* Custom responsive styles matching signin exactly */
    @media (max-width: 425px) {
      .mobile-compact {
        max-width: 320px !important;
        padding: 18px !important;
        min-height: 440px !important;
      }
      .mobile-compact h2 {
        font-size: 1.25rem !important;
        margin-bottom: 4px !important;
      }
      .mobile-compact p {
        font-size: 0.75rem !important;
        margin-bottom: 16px !important;
      }
      .mobile-input {
        padding: 8px 12px !important;
        font-size: 0.8rem !important;
      }
      .mobile-label {
        font-size: 0.65rem !important;
        margin-bottom: 4px !important;
      }
      .mobile-error {
        font-size: 0.65rem !important;
        height: 12px !important;
        margin-top: 2px !important;
      }
      .mobile-btn {
        padding: 10px 14px !important;
        font-size: 0.8rem !important;
      }
      .mobile-field {
        margin-bottom: 14px !important;
      }
    }

    @media (max-width: 320px) {
      .mobile-compact {
        max-width: 300px !important;
        padding: 16px !important;
        min-height: 420px !important;
      }
      .mobile-input {
        padding: 7px 10px !important;
        font-size: 0.75rem !important;
      }
    }

    /* 18:9 Aspect Ratio Optimization (2160Ã—1080) - Same as signin */
    @media (min-aspect-ratio: 18/9) {
      .wide-screen-container {
        max-width: 450px !important;
        margin-left: auto !important;
        margin-right: auto !important;
        padding-left: 20px !important;
        padding-right: 20px !important;
        min-height: 500px !important;
      }
      .wide-screen-container h2 {
        font-size: 1.75rem !important;
        margin-bottom: 8px !important;
      }
      .wide-screen-container p {
        font-size: 1rem !important;
        margin-bottom: 20px !important;
      }
      .wide-screen-container .mobile-input {
        padding: 12px 16px !important;
        font-size: 0.9rem !important;
      }
      .wide-screen-container .mobile-label {
        font-size: 0.8rem !important;
        margin-bottom: 6px !important;
      }
      .wide-screen-container .mobile-btn {
        padding: 12px 20px !important;
        font-size: 0.9rem !important;
      }
      .wide-screen-container .mobile-field {
        margin-bottom: 18px !important;
      }
    }

    /* Ultra-wide screens */
    @media (min-aspect-ratio: 21/9) {
      .wide-screen-container {
        max-width: 500px !important;
        padding-left: 24px !important;
        padding-right: 24px !important;
        min-height: 550px !important;
      }
    }

    /* Landscape tablet optimization */
    @media (min-width: 768px) and (max-height: 600px) {
      .wide-screen-container {
        max-width: 420px !important;
        padding-top: 20px !important;
        padding-bottom: 20px !important;
        min-height: 450px !important;
      }
    }
  </style>
</head>
<body class="min-h-screen bg-gray-900 flex flex-col overflow-hidden">

    <!-- Navigation - Keep Original -->
    <nav class="absolute top-0 left-0 w-full bg-white shadow-md flex justify-center items-center z-20">
        <a href="/">
            <div class="text-2xl font-bold text-gray-800 flex items-center" style="font-family: 'Raleway', sans-serif;">
                <img src="./images/logo.png" class="logo bgImg" alt="logo">
                <div class="pl-2">WOODLAND</div>
            </div>
        </a>
    </nav>

    <!-- Main Content -->
    <div class="flex-1 relative flex items-center justify-center px-2 sm:px-4 pt-16">

        <!-- Background Image with Overlay -->
        <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('/images/signUpBg.jpg');">
            <div class="absolute inset-0 bg-black bg-opacity-50"></div>
        </div>

        <!-- Forgot Password Form Container -->
        <div class="wide-screen-container mobile-compact relative z-10 bg-white bg-opacity-20 backdrop-blur-md p-5 sm:p-6 rounded-xl shadow-2xl w-full max-w-sm mx-auto border border-white border-opacity-30">
            
            <!-- Header -->
            <div class="text-center mb-4 sm:mb-5">
                <h2 class="text-lg sm:text-xl md:text-2xl font-bold text-white mb-1 sm:mb-2" style="font-family: 'Raleway', sans-serif;">
                    <i class="fas fa-key mr-2 text-blue-300"></i>
                    Forgot Password?
                </h2>
                <p class="text-xs sm:text-sm text-gray-200 leading-relaxed">Enter your email to receive a reset OTP</p>
            </div>

            <!-- Success/Error Messages -->
            <div id="error-message" class="hidden text-xs sm:text-sm px-3 py-2 rounded-lg text-center font-medium mb-3 sm:mb-4">
            </div>
            <div id="success-message" class="hidden text-xs sm:text-sm px-3 py-2 rounded-lg text-center font-medium mb-3 sm:mb-4">
            </div>

            <!-- Forgot Password Form -->
            <form id="forgot-form" class="space-y-4">
                
                <!-- Email Field -->
                <div class="mobile-field group">
                    <label class="mobile-label block text-xs font-bold text-white mb-1 sm:mb-2 uppercase tracking-wide">
                        <i class="fas fa-envelope mr-1 text-gray-300 text-xs"></i>Email Address
                    </label>
                    <input id="email" type="email" name="email" required 
                        placeholder="Enter your registered email"
                        class="mobile-input w-full px-3 py-2 bg-white bg-opacity-90 border-2 border-gray-300 rounded-lg focus:border-blue-500 focus:outline-none focus:bg-opacity-100 transition-all duration-200 group-hover:bg-opacity-100 text-sm focus:ring-2 focus:ring-blue-400">
                    <div id="error-email" class="mobile-error text-xs text-red-300 mt-1 h-3 sm:h-4 font-medium"></div>
                </div>

                <!-- Send OTP Button -->
                <button type="submit" 
                    class="mobile-btn w-full bg-blue-600 bg-opacity-90 text-white py-2.5 sm:py-3 px-4 sm:px-6 rounded-lg hover:bg-opacity-100 font-semibold transition-all duration-200 transform hover:scale-[1.02] disabled:opacity-50 disabled:cursor-not-allowed backdrop-blur-sm text-sm shadow-lg">
                    <i class="fas fa-paper-plane mr-2 text-sm"></i>Send Reset OTP
                </button>

                <!-- Additional Information -->
                <div class="text-center mt-4">
                    <div class="inline-flex items-center gap-2 bg-blue-500 bg-opacity-20 backdrop-blur-sm rounded-full px-3 py-2 border border-blue-300 border-opacity-30">
                        <i class="fas fa-info-circle text-blue-300 text-xs"></i>
                        <span class="text-blue-100 text-xs font-medium">Check your inbox & spam folder</span>
                    </div>
                </div>

                <!-- Back to Sign In Link -->
                <div class="text-center mt-5 sm:mt-6 pt-4 sm:pt-5 border-t border-white border-opacity-30">
                    <p class="text-xs sm:text-sm text-gray-200">
                        Remember your password? 
                        <a href="/signIn" class="text-blue-300 font-semibold hover:text-blue-200 underline transition-all duration-200">
                            <i class="fas fa-sign-in-alt mr-1 text-xs"></i>Sign In Here
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>

    <!-- Loading Overlay -->
    <div id="loading-overlay" class="fixed inset-0 bg-black bg-opacity-70 z-50 flex justify-center items-center hidden">
        <div class="bg-white rounded-xl p-4 sm:p-6 text-center shadow-2xl max-w-xs sm:max-w-sm mx-4">
            <div class="animate-spin rounded-full h-8 w-8 sm:h-12 sm:w-12 border-b-2 border-gray-800 mx-auto mb-3 sm:mb-4"></div>
            <p class="text-gray-800 font-semibold text-sm sm:text-lg" id="loading-title">Sending OTP...</p>
            <p class="text-gray-600 text-xs sm:text-sm mt-1" id="loading-message">Please wait</p>
        </div>
    </div>

    <script>
        // Form elements
        const elements = {
            email: document.getElementById("email"),
            form: document.getElementById("forgot-form")
        };

        // Message elements
        const messages = {
            error: document.getElementById("error-message"),
            success: document.getElementById("success-message")
        };

        // Loading elements
        const loading = {
            overlay: document.getElementById("loading-overlay"),
            title: document.getElementById("loading-title"),
            message: document.getElementById("loading-message")
        };

        // Validation functions
        function validateEmail() {
            const email = elements.email.value.trim();
            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            
            if (!email) {
                showFieldError('Email is required');
                return false;
            } else if (!emailPattern.test(email)) {
                showFieldError('Please enter a valid email address');
                return false;
            }
            
            hideFieldError();
            return true;
        }

        // Helper functions
        function showFieldError(message) {
            const errorElement = document.getElementById('error-email');
            errorElement.textContent = message;
        }

        function hideFieldError() {
            const errorElement = document.getElementById('error-email');
            errorElement.textContent = '';
        }

        function showMainError(message) {
            hideMainSuccess();
            const errorElement = messages.error;
            errorElement.textContent = message;
            errorElement.className = 'text-xs sm:text-sm px-3 py-2 rounded-lg text-center font-medium mb-3 sm:mb-4 text-red-800 bg-red-100 border border-red-400';
            errorElement.classList.remove('hidden');
            
            setTimeout(() => errorElement.classList.add('hidden'), 5000);
        }

        function showMainSuccess(message) {
            hideMainError();
            const successElement = messages.success;
            successElement.textContent = message;
            successElement.className = 'text-xs sm:text-sm px-3 py-2 rounded-lg text-center font-medium mb-3 sm:mb-4 text-green-800 bg-green-100 border border-green-400';
            successElement.classList.remove('hidden');
        }

        function hideMainError() {
            messages.error.classList.add('hidden');
        }

        function hideMainSuccess() {
            messages.success.classList.add('hidden');
        }

        function showLoading(title, message) {
            loading.title.textContent = title;
            loading.message.textContent = message;
            loading.overlay.classList.remove('hidden');
        }

        function hideLoading() {
            loading.overlay.classList.add('hidden');
        }

        // Form submission
        elements.form.addEventListener('submit', async function(e) {
            e.preventDefault();

            // Reset previous messages
            hideFieldError();
            hideMainError();
            hideMainSuccess();

            const isValid = validateEmail();

            if (!isValid) {
                return;
            }

            const formData = {
                email: elements.email.value.trim()
            };

            showLoading('Sending OTP...', 'Please wait while we send the reset code');

            try {
                const response = await fetch('/forgot-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();
                hideLoading();

                if (data.success) {
                    showMainSuccess(data.message || 'OTP sent successfully to your email!');
                    setTimeout(() => {
                        if (data.redirect) {
                            window.location.href = data.redirect;
                        }
                    }, 2000);
                } else {
                    showMainError(data.message || 'Failed to send reset OTP. Please try again.');
                }
            } catch (error) {
                hideLoading();
                showMainError('Something went wrong. Please check your connection and try again.');
                console.error('Forgot password error:', error);
            }
        });

        // Real-time validation
        elements.email.addEventListener('blur', validateEmail);
        elements.email.addEventListener('input', function() {
            if (this.value.trim()) {
                hideFieldError();
            }
        });
    </script>
</body>
</html>
