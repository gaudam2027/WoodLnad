<link rel="stylesheet" href="./css/home.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css">

<%- include('../../views/partials/user/header') %>

<!-- Hero Section Slider -->
<div class="swiper hero-section h-[500px]">
  <div class="swiper-wrapper">

    <div class="swiper-slide flex items-center bg-cover bg-center" style="background-image: url('/images/banner-sofa.png');">
      <div class="container mx-auto px-6">
        <h1 class="text-4xl font-bold text-white mb-4">Find the Perfect Sofa</h1>
        <p class="text-white mb-8">Comfort and elegance combined</p>
        <button class="bg-white text-gray-800 px-6 py-3 rounded-md font-medium hover:bg-gray-100 opacity-60">Shop Now</button>
      </div>
    </div>

    <div class="swiper-slide flex items-center bg-cover bg-center" style="background-image: url('/images/hero-chair.jpg');">
      <div class="container mx-auto px-6">
        <h1 class="text-4xl font-bold text-white mb-4">Stylish Chairs</h1>
        <p class="text-white mb-8">Modern designs for your space</p>
        <button class="bg-white text-gray-800 px-6 py-3 rounded-md font-medium hover:bg-gray-100">Explore</button>
      </div>
    </div>

    <div class="swiper-slide flex items-center bg-cover bg-center" style="background-image: url('/images/hero-table.jpg');">
      <div class="container mx-auto px-6">
        <h1 class="text-4xl font-bold text-white mb-4">Elegant Tables</h1>
        <p class="text-white mb-8">Perfect for every occasion</p>
        <button class="bg-white text-gray-800 px-6 py-3 rounded-md font-medium hover:bg-gray-100">Browse</button>
      </div>
    </div>

  </div>
  <div class="swiper-pagination"></div>
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
</div>

<!-- Sale Section -->
<div class="bg-gray-50 py-12">
  <div class="container mx-auto px-6 text-center">
    <span class="sale-badge inline-block mb-4">SALE</span>
    <h2 class="text-3xl font-semibold mb-6">New collection arrivals are<br>ready to shop</h2>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mt-12">

      <% for(let i = 0; i < products.length; i++) { %>
        <div class="rounded-2xl overflow-hidden shadow-md hover:shadow-xl transition-transform hover:scale-[1.03] duration-300">
          <div class="relative overflow-hidden group">
            <a href="/productDetials?id=<%= products[i]._id %>">
              <img src="/uploads/product-images/<%= products[i].images[0] %>" alt="<%= products[i].productName %>" 
                   class="w-full h-60 object-cover rounded-lg border border-gray-300 transform transition-transform duration-500 group-hover:scale-110">
            </a>
          </div>
          <div class="p-4 relative">
            <h3 class="text-lg font-semibold text-gray-800 mb-2 line-clamp-2"><%= products[i].productName %></h3>
            <div class="flex items-center justify-center space-x-2">
              <p class="text-sm text-gray-400 line-through">₹ <%= products[i].variants[0].regularPrice %></p>
              <p class="text-md text-gray-700 font-bold">₹ <%= products[i].variants[0].salePrice %></p>
            </div>
        
            <!-- Wishlist Icon and Add to Cart Button -->
            <div class="relative mt-4 flex justify-center items-center">
              
              <!-- Wishlist Icon -->
              <a href="/addToWishlist/<%= products[i]._id %>" 
                 class="absolute right-0 top-1 text-red-500 hover:text-red-600 transition duration-300 p-1">
                 
                 <% if (products[i].isInWishlist) { %>
                   <!-- Filled Heart -->
                   <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" 
                        stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-800">
                     <path stroke-linecap="round" stroke-linejoin="round"
                           d="M21 8.25c0-2.485-2.014-4.5-4.5-4.5a4.478 4.478 0 00-3.643 1.908A4.478 4.478 0 009.214 3.75C6.73 3.75 4.714 5.765 4.714 8.25c0 5.25 7.286 9.75 7.286 9.75s7.286-4.5 7.286-9.75z"/>
                   </svg>
                 <% } else { %>
                   <!-- Outlined Heart -->
                   <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" 
                        stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-800">
                     <path stroke-linecap="round" stroke-linejoin="round" 
                           d="M21 8.25c0-2.485-2.014-4.5-4.5-4.5a4.478 4.478 0 00-3.643 1.908A4.478 4.478 0 009.214 3.75C6.73 3.75 4.714 5.765 4.714 8.25c0 5.25 7.286 9.75 7.286 9.75s7.286-4.5 7.286-9.75z"/>
                   </svg>
                 <% } %>
        
              </a>
        
              <!-- Add to Cart Button -->
              <a href="/addToCart/<%= products[i]._id %>" 
                 class="bg-gray-900 text-white px-4 py-2 rounded-md hover:bg-gray-700 transition-colors duration-300 text-sm">
                Add to Cart
              </a>
            </div>
          </div>
        </div>
        
        
      <% } %>

    </div>
  </div>
</div>

<!-- Home Space Section -->
<div class="py-16 bg-white">
  <div class="container mx-auto px-6">
    <div class="flex flex-col md:flex-row items-center">
      <div class="md:w-1/2 mb-8 md:mb-0">
        <h2 class="text-3xl font-bold mb-4">Your Home Space Starts Here</h2>
        <p class="text-gray-600 mb-6">Transform your living space with our curated collection of furniture and home decor.</p>
        <button class="bg-gray-800 text-white px-6 py-3 rounded-md font-medium hover:bg-gray-700">Learn More</button>
      </div>
      <div class="md:w-1/2">
        <img src="/images/interior.png" alt="Modern Interior" class="rounded-lg shadow-lg">
      </div>
    </div>
  </div>
</div>

<!-- Featured Products -->
<div class="bg-gray-50 py-16">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold mb-12 text-center">Featured Products</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">

      <% products.forEach(product => { %>
        <div class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow hover:scale-105">
          <img src="<%= product.images[0] %>" alt="<%= product.productName %>" class="w-full h-48 object-cover">
          <div class="p-4">
            <h3 class="text-lg font-medium line-clamp-2"><%= product.productName %></h3>
            <p class="text-gray-600 mt-2">₹ <%= product.variants[0].price %></p>
          </div>
        </div>
      <% }); %>

    </div>
  </div>
</div>

<!-- Testimonials -->
<div class="py-16 bg-white">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold mb-12 text-center">What People Are Saying About Us</h2>
    <div class="flex flex-col md:flex-row items-center justify-center">
      <div class="md:w-1/2 flex items-center mb-8 md:mb-0">
        <img src="/images/review_prof.png" alt="Customer" class="w-16 h-16 rounded-full mr-4">
        <div>
          <p class="text-gray-600 italic mb-2">"The furniture is beautiful and the quality is exceptional. Delivery was prompt and the assembly was easy. Highly recommend!"</p>
          <p class="font-semibold">- Sarah Johnson</p>
        </div>
      </div>
      <div class="md:w-1/2">
        <img src="/images/interior.png" alt="Interior Design" class="rounded-lg shadow-lg">
      </div>
    </div>
  </div>
</div>

<!-- Promo Banner -->
<div class="promo-banner py-12">
  <div class="container mx-auto px-6 text-center">
    <h2 class="text-3xl font-bold mb-4">Get 10% off your first order</h2>
    <p class="mb-8">Sign up for our newsletter and receive a discount code</p>
    <div class="max-w-md mx-auto flex">
      <input type="email" placeholder="Your email address" class="flex-1 px-4 py-3 rounded-l-md focus:outline-none">
      <button class="bg-white text-gray-800 px-6 py-3 rounded-r-md font-medium hover:bg-gray-100">Subscribe</button>
    </div>
  </div>
</div>

<%- include('../../views/partials/user/footer') %>

<script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
<script>
  const swiper = new Swiper('.swiper', {
    loop: true,
    autoplay: {
      delay: 4000,
    },
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
  });
</script>
