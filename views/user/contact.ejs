    transform: translateY(-2px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .hero-gradient {
    background: linear-gradient(135deg, #1e293b 0%, #475569 25%, #64748b 75%, #94a3b8 100%);
    position: relative;
    overflow: hidden;
  }

  .hero-gradient::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
