<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign In - Woodland</title>
  <link rel="stylesheet" href="/css/output.css">
  <link rel="stylesheet" href="./css/signUp.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
  
  <style>
    /* Custom responsive styles for small mobile */
    @media (max-width: 425px) {
      .mobile-compact {
        max-width: 320px !important;
        padding: 18px !important;
        min-height: 420px !important;
      }
      .mobile-compact h2 {
        font-size: 1.25rem !important;
        margin-bottom: 4px !important;
      }
      .mobile-compact p {
        font-size: 0.75rem !important;
        margin-bottom: 16px !important;
      }
      .mobile-input {
        padding: 8px 12px !important;
        font-size: 0.8rem !important;
      }
      .mobile-label {
        font-size: 0.65rem !important;
        margin-bottom: 4px !important;
      }
      .mobile-error {
        font-size: 0.65rem !important;
        height: 12px !important;
        margin-top: 2px !important;
      }
      .mobile-btn {
        padding: 10px 14px !important;
        font-size: 0.8rem !important;
      }
      .mobile-checkbox {
        margin-bottom: 12px !important;
      }
      .mobile-checkbox label {
        font-size: 0.65rem !important;
      }
      .mobile-login-link {
        font-size: 0.65rem !important;
        margin-top: 12px !important;
        padding-top: 12px !important;
      }
      .mobile-field {
        margin-bottom: 14px !important;
      }
    }

    @media (max-width: 320px) {
      .mobile-compact {
        max-width: 300px !important;
        padding: 16px !important;
        min-height: 400px !important;
      }
      .mobile-input {
        padding: 7px 10px !important;
        font-size: 0.75rem !important;
      }
    }

    /* 18:9 Aspect Ratio Optimization (2160Ã—1080) */
    @media (min-aspect-ratio: 18/9) {
      .wide-screen-container {
        max-width: 450px !important;
        margin-left: auto !important;
        margin-right: auto !important;
        padding-left: 20px !important;
        padding-right: 20px !important;
        min-height: 500px !important;
      }
      .wide-screen-container h2 {
        font-size: 1.75rem !important;
        margin-bottom: 8px !important;
      }
      .wide-screen-container p {
        font-size: 1rem !important;
        margin-bottom: 20px !important;
      }
      .wide-screen-container .mobile-input {
        padding: 12px 16px !important;
        font-size: 0.9rem !important;
      }
      .wide-screen-container .mobile-label {
        font-size: 0.8rem !important;
        margin-bottom: 6px !important;
      }
      .wide-screen-container .mobile-btn {
        padding: 12px 20px !important;
        font-size: 0.9rem !important;
      }
      .wide-screen-container .mobile-error {
        font-size: 0.75rem !important;
        height: 16px !important;
        margin-top: 4px !important;
      }
      .wide-screen-container .mobile-field {
        margin-bottom: 18px !important;
      }
    }

    /* Ultra-wide screens (even wider than 18:9) */
    @media (min-aspect-ratio: 21/9) {
      .wide-screen-container {
        max-width: 500px !important;
        padding-left: 24px !important;
        padding-right: 24px !important;
        min-height: 550px !important;
      }
    }

    /* Landscape tablet optimization */
    @media (min-width: 768px) and (max-height: 600px) {
      .wide-screen-container {
        max-width: 420px !important;
        padding-top: 20px !important;
        padding-bottom: 20px !important;
        min-height: 450px !important;
      }
    }
  </style>
</head>
<body class="min-h-screen bg-gray-900 flex flex-col overflow-hidden">

    <!-- Navigation - Keep Original -->
    <nav class="absolute top-0 left-0 w-full bg-white shadow-md flex justify-center items-center z-20">
        <a href="/">
            <div class="text-2xl font-bold text-gray-800 flex items-center" style="font-family: 'Raleway', sans-serif;">
                <img src="./images/logo.png" class="logo bgImg" alt="logo">
                <div class="pl-2">WOODLAND</div>
            </div>
        </a>
    </nav>

    <!-- Main Content -->
    <div class="flex-1 relative flex items-center justify-center px-2 sm:px-4 pt-16">

        <!-- Background Image with Overlay -->
        <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('/images/signUpBg.jpg');">
            <div class="absolute inset-0 bg-black bg-opacity-50"></div>
        </div>

        <!-- Enhanced Size Form Container -->
        <div class="wide-screen-container mobile-compact relative z-10 bg-white bg-opacity-20 backdrop-blur-md p-5 sm:p-6 rounded-xl shadow-2xl w-full max-w-sm mx-auto border border-white border-opacity-30">
            
            <!-- Header -->
            <div class="text-center mb-4 sm:mb-5">
                <h2 class="text-lg sm:text-xl md:text-2xl font-bold text-white mb-1 sm:mb-2" style="font-family: 'Raleway', sans-serif;">
                    Welcome Back
                </h2>
                <p class="text-xs sm:text-sm text-gray-200">Sign in to your account</p>
            </div>

            <!-- Success/Error Messages -->
            <div id="error-message" class="hidden text-xs sm:text-sm px-3 py-2 rounded-lg text-center font-medium mb-3 sm:mb-4">
            </div>

            <!-- Sign In Form -->
            <form id="signin-form" class="space-y-4">
                
                <!-- Email/Phone Field -->
                <div class="mobile-field group">
                    <label class="mobile-label block text-xs font-bold text-white mb-1 sm:mb-2 uppercase tracking-wide">
                        <i class="fas fa-envelope mr-1 text-gray-300 text-xs"></i>Email/Phone
                    </label>
                    <input id="email" type="text" name="email" required 
                        placeholder="Enter email or phone"
                        class="mobile-input w-full px-3 py-2 bg-white bg-opacity-90 border-2 border-gray-300 rounded-lg focus:border-gray-600 focus:outline-none focus:bg-opacity-100 transition-all duration-200 group-hover:bg-opacity-100 text-sm">
                    <div id="error-email" class="mobile-error text-xs text-red-300 mt-1 h-3 sm:h-4 font-medium"></div>
                </div>

                <!-- Password Field -->
                <div class="mobile-field group">
                    <label class="mobile-label block text-xs font-bold text-white mb-1 sm:mb-2 uppercase tracking-wide">
                        <i class="fas fa-lock mr-1 text-gray-300 text-xs"></i>Password
                        <button type="button" id="toggle-password" class="ml-2 text-xs text-gray-300 hover:text-white">
                            <i class="fas fa-eye text-xs"></i>
                        </button>
                    </label>
                    <input id="password" type="password" name="password" required 
                        placeholder="Enter password"
                        class="mobile-input w-full px-3 py-2 bg-white bg-opacity-90 border-2 border-gray-300 rounded-lg focus:border-gray-600 focus:outline-none focus:bg-opacity-100 transition-all duration-200 group-hover:bg-opacity-100 text-sm">
                    <div id="error-password" class="mobile-error text-xs text-red-300 mt-1 h-3 sm:h-4 font-medium"></div>
                </div>

                <!-- Remember Me & Forgot Password -->
                <div class="flex items-center justify-between text-xs sm:text-sm mb-4">
                    <div class="flex items-center">
                        <input type="checkbox" id="remember" class="mr-2 w-3 h-3 sm:w-4 sm:h-4 text-gray-600 bg-white bg-opacity-90 border-2 border-gray-300 rounded focus:ring-gray-500">
                        <label for="remember" class="text-white">Remember</label>
                    </div>
                    <a href="/forgot-password" class="text-blue-300 hover:text-blue-200 underline">
                        Forgot?
                    </a>
                </div>

                <!-- Sign In Button -->
                <button type="submit" 
                    class="mobile-btn w-full bg-gray-800 bg-opacity-90 text-white py-2.5 sm:py-3 px-4 sm:px-6 rounded-lg hover:bg-opacity-100 font-semibold transition-all duration-200 transform hover:scale-[1.02] disabled:opacity-50 disabled:cursor-not-allowed backdrop-blur-sm text-sm">
                    <i class="fas fa-sign-in-alt mr-2 text-sm"></i>Sign In
                </button>

                <!-- Divider -->
                <div class="relative my-4 sm:my-5">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-white border-opacity-30"></div>
                    </div>
                    <div class="relative flex justify-center text-xs sm:text-sm">
                        <span class="px-3 bg-transparent text-gray-200 font-medium">Or</span>
                    </div>
                </div>

                <!-- Social Login Button -->
                <div class="space-y-3">
                    <a href="/auth/google" 
                        class="mobile-btn w-full flex items-center justify-center bg-red-500 bg-opacity-90 text-white py-2.5 sm:py-3 px-4 sm:px-6 rounded-lg hover:bg-opacity-100 font-medium transition-all duration-200 transform hover:scale-[1.02] backdrop-blur-sm text-sm">
                        <i class="fab fa-google mr-2 text-sm"></i>Google
                    </a>
                </div>

                <!-- Sign Up Link -->
                <div class="mobile-login-link text-center mt-4 sm:mt-5 pt-4 sm:pt-5 border-t border-white border-opacity-30">
                    <p class="text-xs sm:text-sm text-gray-200">
                        No account? 
                        <a href="/signUp" class="text-blue-300 font-semibold hover:text-blue-200 underline">
                            Sign Up
                        </a>
                    </p>
                </div>
            </form>
        </div>
    </div>

    <!-- Loading Overlay -->
    <div id="loading-overlay" class="fixed inset-0 bg-black bg-opacity-70 z-50 flex justify-center items-center hidden">
        <div class="bg-white rounded-xl p-4 sm:p-6 text-center shadow-2xl max-w-xs sm:max-w-sm mx-4">
            <div class="animate-spin rounded-full h-8 w-8 sm:h-12 sm:w-12 border-b-2 border-gray-800 mx-auto mb-3 sm:mb-4"></div>
            <p class="text-gray-800 font-semibold text-sm sm:text-lg" id="loading-title">Signing In...</p>
            <p class="text-gray-600 text-xs sm:text-sm mt-1" id="loading-message">Please wait</p>
        </div>
    </div>

    <script>
        // Form elements
        const elements = {
            email: document.getElementById("email"),
            password: document.getElementById("password"),
            remember: document.getElementById("remember"),
            form: document.getElementById("signin-form"),
            togglePassword: document.getElementById("toggle-password")
        };

        // Error elements
        const errors = {
            email: document.getElementById("error-email"),
            password: document.getElementById("error-password"),
            main: document.getElementById("error-message")
        };

        // Loading elements
        const loading = {
            overlay: document.getElementById("loading-overlay"),
            title: document.getElementById("loading-title"),
            message: document.getElementById("loading-message")
        };

        // Password toggle functionality
        elements.togglePassword.addEventListener('click', function() {
            const passwordField = elements.password;
            const icon = this.querySelector('i');
            
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });

        // Validation functions
        function validateEmail() {
            const email = elements.email.value.trim();
            const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            const phonePattern = /^\d{10}$/;
            
            if (!email) {
                showFieldError('email', 'Required');
                return false;
            } else if (!emailPattern.test(email) && !phonePattern.test(email)) {
                showFieldError('email', 'Invalid');
                return false;
            }
            
            hideFieldError('email');
            return true;
        }

        function validatePassword() {
            const password = elements.password.value;
            
            if (!password) {
                showFieldError('password', 'Required');
                return false;
            } else if (password.length < 6) {
                showFieldError('password', 'Too short');
                return false;
            }
            
            hideFieldError('password');
            return true;
        }

        // Helper functions
        function showFieldError(field, message) {
            const errorElement = errors[field];
            errorElement.textContent = message;
        }

        function hideFieldError(field) {
            const errorElement = errors[field];
            errorElement.textContent = '';
        }

        function showMainError(message) {
            const errorElement = errors.main;
            errorElement.textContent = message;
            errorElement.className = 'text-xs sm:text-sm px-3 py-2 rounded-lg text-center font-medium mb-3 sm:mb-4 text-red-800 bg-red-100 border border-red-400';
            errorElement.classList.remove('hidden');
            
            setTimeout(() => errorElement.classList.add('hidden'), 5000);
        }

        function showMainSuccess(message) {
            const errorElement = errors.main;
            errorElement.textContent = message;
            errorElement.className = 'text-xs sm:text-sm px-3 py-2 rounded-lg text-center font-medium mb-3 sm:mb-4 text-green-800 bg-green-100 border border-green-400';
            errorElement.classList.remove('hidden');
        }

        function showLoading(title, message) {
            loading.title.textContent = title;
            loading.message.textContent = message;
            loading.overlay.classList.remove('hidden');
        }

        function hideLoading() {
            loading.overlay.classList.add('hidden');
        }

        // Form submission
        elements.form.addEventListener('submit', async function(e) {
            e.preventDefault();

            // Reset previous errors
            hideFieldError('email');
            hideFieldError('password');
            errors.main.classList.add('hidden');

            const isValid = validateEmail() && validatePassword();

            if (!isValid) {
                return;
            }

            const formData = {
                email: elements.email.value.trim(),
                password: elements.password.value,
                remember: elements.remember.checked
            };

            showLoading('Signing In...', 'Please wait');

            try {
                const response = await fetch('/signIn', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });

                const data = await response.json();
                hideLoading();

                if (data.success) {
                    showMainSuccess('Success! Redirecting...');
                    setTimeout(() => {
                        window.location.href = data.redirectUrl;
                    }, 1500);
                } else {
                    showMainError(data.message || 'Invalid credentials');
                }
            } catch (error) {
                hideLoading();
                showMainError('Server error. Try again.');
                console.error('Signin fetch error:', error);
            }
        });

        // Real-time validation
        elements.email.addEventListener('blur', validateEmail);
        elements.password.addEventListener('blur', validatePassword);
    </script>
</body>
</html>
